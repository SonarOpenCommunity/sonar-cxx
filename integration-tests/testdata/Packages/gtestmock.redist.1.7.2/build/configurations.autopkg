configurations {
    Toolset { 
        key : "PlatformToolset";
        choices : { v140, v100, v120 };
    };
    Platform { 
        key : "Platform";
        choices : { Win32, x64 };
        Win32.aliases : { x86, win32, ia32, 386 };
        x64.aliases : { x64, amd64, em64t, intel64, x86-64, x86_64 };
    };
    Configuration { 
        key : "Configuration";
        choices : { Release, Debug };
    };
    Linkage { 
        choices : { dynamic, static };
    };
    Other { 
        key : "OTHER_STUFF";
        choices : { RuntimeLibraryNull };
    };
};
